[project]
title = DefoldCodePad
version = 0.1
bundle_resources = /codepad/bundle_resources/
bundle_exclude_resources = 
custom_resources = main/scripts
dependencies#0 = https://github.com/defold/extension-poco/archive/refs/tags/1.0.1.zip
dependencies#1 = https://github.com/britzl/defold-metrics/archive/refs/tags/1.2.1.zip

[bootstrap]
main_collection = /main/main.collectionc
render = /codepad/rendering/custom.renderc

[input]
game_binding = /input/game.input_bindingc
use_accelerometer = 0

[library]
include_dirs = codepad

[display]
width = 720
height = 720

[physics]
scale = 0.02

[script]
shared_state = 1

[html5]
htmlfile = /codepad/template.html

